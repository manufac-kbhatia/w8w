generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Workflow {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String?   @default("untitled-workflow")
  active      Boolean   @default(true)
  nodes       INode[]
  connections IEdge[]
  updatedAt   DateTime? @updatedAt
  createdAt   DateTime  @default(now())
}

model Credential {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  name           String    @unique
  data           String
  type           String
  supportedNodes String[]
  updatedAt      DateTime? @updatedAt
  createdAt      DateTime  @default(now())
}

type INode {
  id           String
  name         String
  type         String
  position     Position
  parameters   Json
  credentialId String?
}

type IEdge {
  id     String
  source String
  target String
}

type Position {
  x Int
  y Int
}
