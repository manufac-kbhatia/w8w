generator client {
    provider            = "prisma-client"
    output              = "../generated/prisma"
    importFileExtension = "ts" // https://github.com/prisma/prisma/issues/27079#issuecomment-3275607034
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model IWorkflow {
    id          String        @id @default(auto()) @map("_id") @db.ObjectId
    name        String?       @default("untitled-workflow")
    active      Boolean       @default(true)
    nodes       INode[]
    connections IConnection[]
    updatedAt   DateTime?     @updatedAt
    createdAt   DateTime      @default(now())
}

model ICredential {
    id             String           @id @default(auto()) @map("_id") @db.ObjectId
    data           ICredentialData?
    supportedNodes String[]
    updatedAt      DateTime?        @updatedAt
    createdAt      DateTime         @default(now())
}

type ICredentialData {
    credentialSchema Json?
    parameters       Json?
}

enum INodeType {
    INITIAL
    CUSTOM
}

type INode {
    id       String
    nodeType INodeType
    position IPosition
    data     INodeData?
}

type INodeData {
    nodeSchema   Json?
    parameters   Json?
    credentialId String?
}

type IConnection {
    id           String
    source       String
    target       String
    sourceHandle String
    targetHandle String
}

type IPosition {
    x Int
    y Int
}
