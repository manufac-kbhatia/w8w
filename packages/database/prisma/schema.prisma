generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Workflow {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  active      Boolean   @default(true)
  nodes       INode[]
  connections Json
  updatedAt   DateTime? @updatedAt
  createdAt   DateTime  @default(now())
}

model Credential {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String    @unique
  data      String
  type      String
  updatedAt DateTime? @updatedAt
  createdAt DateTime  @default(now())
}

type INode {
  id               String
  name             String
  type             String
  positionX        Float
  positionY        Float
  disabled         Boolean?
  retryOnFail      Boolean?
  maxTries         Int?
  waitBetweenTries Int?
  alwaysOutputData Boolean?
  executeOnce      Boolean?
  continueOnFail   Boolean?
  parameters       Json
  credentials      Json
  webhookId        String?
}
