generator client {
    provider            = "prisma-client"
    output              = "../generated/prisma"
    importFileExtension = "ts" // https://github.com/prisma/prisma/issues/27079#issuecomment-3275607034
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model Workflow {
    id          String       @id @default(auto()) @map("_id") @db.ObjectId
    name        String?      @default("untitled-workflow")
    active      Boolean      @default(true)
    nodes       Node[]
    connections Connection[]
    updatedAt   DateTime?    @updatedAt
    createdAt   DateTime     @default(now())
}

model Credential {
    id             String          @id @default(auto()) @map("_id") @db.ObjectId
    data           CredentialData?
    supportedNodes String[]
    updatedAt      DateTime?       @updatedAt
    createdAt      DateTime        @default(now())
}

type CredentialData {
    credentialSchema Json?
    parameters       Json?
}

enum NodeType {
    INITIAL
    CUSTOM
    FORM
}

model Node {
    id         String    @id @map("_id")
    nodeType   NodeType
    position   Position
    data       NodeData?
    workflow   Workflow? @relation(fields: [WorkflowId], references: [id])
    WorkflowId String?   @db.ObjectId
}

type NodeData {
    nodeSchema   Json?
    parameters   Json?
    meta         Json?
    credentialId String?
}

model Connection {
    id           String    @id @map("_id")
    source       String
    target       String
    sourceHandle String
    targetHandle String
    workflow     Workflow? @relation(fields: [WorkflowId], references: [id])
    WorkflowId   String?   @db.ObjectId
}

type Position {
    x Int
    y Int
}
